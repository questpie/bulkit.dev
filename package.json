{
  "name": "@bulkit/webapp-boilerplate",
  "module": "index.ts",
  "type": "module",
  "devDependencies": {
    "@biomejs/biome": "^1.9.1",
    "@types/bun": "latest",
    "check-dependency-version-consistency": "^4.1.0",
    "npm-check-updates": "^17.1.1",
    "rimraf": "^6.0.1"
  },
  "peerDependencies": {
    "typescript": "^5.5.4"
  },
  "scripts": {
    "clean": "bun clean:nm && bun clean:lock && bun clean:artifacts",
    "clean:artifacts": "bunx rimraf --glob ./**/dist ./**/build ./**/out ./**/.next",
    "clean:lock": "bunx rimraf --glob ./**/bun.lockb",
    "clean:nm": "bunx rimraf --glob ./**/node_modules",
    "cli": "bun run ./scripts/cli.ts",
    "deps:check": "bunx check-dependency-version-consistency .",
    "deps:update": "bunx npm-check-updates -ui -ws",
    "dev:api": "cd apps/api && bun run dev",
    "dev:app": "cd apps/app && bun run dev",
    "dev:worker": "cd apps/api && bun run dev:worker",
    "fix": "bun @biomejs/biome check --apply-unsafe ./packages ./apps",
    "format": "bun @biomejs/biome format --write ./packages ./apps",
    "lint": "bun @biomejs/biome lint ./packages ./apps",
    "postinstall": "bun deps:check",
    "types:check": "tsc --noEmit"
  },
  "workspaces": ["apps/*", "packages/*"]
}
